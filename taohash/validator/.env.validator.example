BT_WALLET_HOTKEY="WALLET HOTKEY NAME"
# BT_WALLET_PATH=/custom/path/to/wallets

#=========================================================================================
# Direct Braiins pool configuration 

# Braiins API and Pool Configuration
# BRAIINS_API_KEY="YOUR API KEY"
# BRAIINS_POOL_USERNAME="POOL USERNAME"
# BRAIINS_POOL_PASSWORD="POOL PASSWORD"
